<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_activity">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:fitsSystemWindows="true"
        android:layout_height="224dp"
        android:layout_width="match_parent">
        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="224dp"
            app:toolbarId="@+id/toolbar"
            app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed|snap"
            app:layout_scrollInterpolator="@android:anim/decelerate_interpolator"
            app:contentScrim="?attr/colorPrimary">
            <FrameLayout
                android:background="#000000"
                android:layout_width="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_height="match_parent">
                <ImageView
                    app:layout_behavior="com.test.weather.AvatarBehavior"
                    android:scaleType="centerCrop"
                    app:layout_collapseMode="parallax"
                    android:id="@+id/weather_logo"
                    android:src="@drawable/w0"
                    android:layout_gravity="left|clip_vertical"
                    android:layout_alignParentTop="true"
                    android:layout_toStartOf="@+id/Temper"
                    android:layout_marginEnd="17dp"
                    android:layout_height="match_parent"
                    android:layout_width="220dp" />

                <RelativeLayout
                    android:id="@+id/icons_layout"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent">

                    <com.test.weather.CircleImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/d02"
                        android:id="@+id/wind_img"
                        android:layout_marginTop="20dp"
                        android:layout_below="@+id/temp_img"
                        android:layout_alignStart="@+id/temp_img" />
                    <com.test.weather.CircleImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/d04"
                        android:id="@+id/wind_dir"
                        android:layout_marginTop="19dp"
                        android:layout_below="@+id/wind_img"
                        android:layout_alignStart="@+id/wind_img" />

                    <TextView
                        android:textColor="@color/colorAccent"
                        android:text="Wind"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/Wind"
                        android:layout_alignTop="@+id/wind_img"
                        android:layout_alignStart="@+id/Wind_dir" />
                    <TextView
                        android:textColor="@color/colorAccent"
                        android:text="Wind_dir"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/Wind_dir"
                        android:layout_weight="1"
                        android:layout_gravity="bottom"
                        android:layout_alignTop="@+id/wind_dir"
                        android:layout_alignStart="@+id/Temper" />

                    <com.test.weather.CircleImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/d01"
                        android:layout_marginTop="45dp"
                        android:id="@+id/temp_img"
                        android:layout_marginEnd="12dp"
                        android:layout_alignParentTop="true"
                        android:layout_toStartOf="@+id/Wind" />

                    <TextView
                        android:textColor="@color/colorAccent"
                        android:text="Temper"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/Temper"
                        android:layout_marginEnd="49dp"
                        android:layout_alignTop="@+id/temp_img"
                        android:layout_alignParentEnd="true" />

                </RelativeLayout>
            </FrameLayout>

        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>
    <android.support.v4.widget.NestedScrollView
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior">
        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|snap">

            <LinearLayout
                android:background="@color/colorPrimary"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:elevation="090dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/d03"
                    android:id="@+id/weather_img"
                    android:layout_weight="0.21" />
                <TextView
                    android:textColor="#FFFFFF"
                    android:textSize="20dp"
                    android:text="Weather"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/description"
                    android:layout_weight="0.52"
                    android:gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:background="@color/colorPrimaryDark"
                android:layout_marginTop="54dp"
                android:layout_marginLeft="24dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.CardView
                    android:layout_marginTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="22dp"
                    android:elevation="15dp"
                    app:cardBackgroundColor="#BABABA">

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="22dp"
                        android:elevation="0dp"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/city"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="30dp"
                            android:layout_weight="1"
                            android:ems="10"
                            android:imeOptions="actionDone"
                            android:imeActionId="@+id/action_done"
                            android:maxLines="1"
                            android:text="city"
                            android:textColor="#FFFFFF"
                            android:background="@android:color/transparent"
                            android:textSize="36dp" />

                        <TextView
                            android:id="@+id/temp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_weight="1"
                            android:text="temp"
                            android:textColor="@color/colorAccent" />

                        <TextView
                            android:id="@+id/humidity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_weight="1"
                            android:text="humidity"
                            android:textColor="@color/colorAccent" />

                        <TextView
                            android:id="@+id/gnd_pressure"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_weight="1"
                            android:text="gnd_pressure"
                            android:textColor="@color/colorAccent" />

                        <TextView
                            android:id="@+id/asl_pressure"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_weight="1"
                            android:text="asl_pressure"
                            android:textColor="@color/colorAccent" />

                        <TextView
                            android:id="@+id/dt_txt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_weight="1"
                            android:text="date_text"
                            android:textColor="@color/colorAccent" />

                        <SeekBar
                            android:id="@+id/seekBar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="26dp"
                            android:layout_weight="1"
                            android:max="100"

                            android:textColor="@color/colorAccent" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />


            </LinearLayout>

        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>
